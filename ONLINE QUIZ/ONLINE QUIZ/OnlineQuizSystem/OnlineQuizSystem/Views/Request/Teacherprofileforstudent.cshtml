@section content_wrapper {

    <style>
        .well {
            background-color: white;
            float: none;
            position: relative;
            width: 70%;
            padding: 10px;
            left: 15%;
            top: 20px;
            border: 10px solid #42c97b;
            margin: 0;
        }
    </style>



    <div class="well">

        <hr />
        <dl class="dl-horizontal">
            <dt>
                <label for="email">User Name:</label>
            </dt>
            <dd>
                @Html.TextBoxFor(x => x.TeacherName, htmlAttributes: new { @readonly = "readonly",@class = "form-control" })
            </dd>


            <dt>
                <label for="email">Full Name:</label>
            </dt>
            <dd>
                @Html.TextBoxFor(x => x.FullName, htmlAttributes: new { @readonly = "readonly",@class = "form-control" })
            </dd>
        

            <dt>
                <label for="email">Email ID:</label>
            </dt>
            <dd>
                @Html.TextBoxFor(x => x.Email, htmlAttributes: new { @readonly = "readonly",@class = "form-control" })
            </dd>
         

            <dt>
                <label for="email">Institution:</label>
                @*@Html.DisplayNameFor(model => model.Institute)*@
            </dt>
            <dd>
                @Html.TextBoxFor(x => x.Institute, htmlAttributes: new { @readonly = "readonly" ,@class = "form-control"})
                @*@Html.DisplayFor(model => model.Institute)*@
            </dd>
      

            <dt>
                <label for="email">Designation:</label>
            </dt>

            <dd>
                @Html.TextBoxFor(x => x.Designation, htmlAttributes: new { @readonly = "readonly",@class = "form-control" })
            </dd>
          

            <dt>
                <label for="email">Contact No.:</label>
            </dt>

            <dd>
                @Html.TextBoxFor(x => x.Contact, htmlAttributes: new { @readonly = "readonly",@class = "form-control"})
            </dd>



        </dl>
    </div>
}