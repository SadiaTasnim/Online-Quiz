@model OnlineQuizSystem.Models.Teacher

@*@model OnlineQuizSystem.Models.Teacher*@

@{
    ViewBag.Title = "TLogin";
}

<style>
    body {
        background-image: url('../../Content/image/login.jpg');
        background-size: cover;
    }
</style>
<h2>Login as Teacher</h2>
<h4>Please use your account details to log in</h4>
@if (ViewBag.msg != null)
{
    <div class="alert alert-danger">
        <strong>Error!</strong> @ViewBag.msg
    </div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.TeacherName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="input-group">
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-user"></span>
                    </span>
                    @Html.EditorFor(model => model.TeacherName, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                @Html.ValidationMessageFor(model => model.TeacherName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Passwords, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="input-group">
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </span>
                    @Html.PasswordFor(model => model.Passwords, new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(model => model.Passwords, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                
                <input type="submit" value="Log In" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@*<p style="color:#d92a2a; text-align:center">@ViewBag.msg</p>*@

<div>
    @Html.ActionLink("Don't have an account? Register here", "TeacherRegister", "TRegistration")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


