@section content_wrapper {


    @using (Html.BeginForm("Addcategory", "Category"))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
           
            <div class="col-md-10">
                @Html.ValidationMessageFor(model => model.CategoryName, "Question Set Name", new { @class = "focus-input100" })
                @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })

            </div>
        </div>



            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-lg bg-dark text-white" />
                </div>
            </div>
        </div>
    }

    <div>
        <table class="table table-responsive">



            <thead>
                <tr>
                    <th>ID</th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th>Subject</th>

                </tr>


            </thead>
            <tbody>
                @foreach (var item in ViewData["list"] as List<OnlineQuizSystem.Models.Category>)
                {
                    <tr>
                        <td>@item.CategoryId</td>

                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>

                        <td>@item.CategoryName</td>



                    </tr>
                }

            </tbody>



        </table>
    </div>
}


